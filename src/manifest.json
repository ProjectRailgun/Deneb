{
  "manifest_version": 2,
  "name": "番組Collection Plus",
  "description": "Watch bangumi, in the way it should be.",
  "version": "0.3.2",
  "browser_specific_settings": {
    "gecko": {
      "id": "deneb@bangumi.co"
    }
  },
  "background": {
    "scripts": ["backend.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["http://localhost/*"],
      "run_at": "document_start",
      "js": ["bridge.js"]
    }
  ],
  "externally_connectable": {
    "matches": [
      "https://bangumi.co/*"
    ]
  },
  "permissions": [
    "cookies",
    "https://bgm.tv/*",
    "https://api.bgm.tv/*",
    "https://bangumi.co/*",
    "storage",
    "tabs"
  ],
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "96": "icons/96.png",
    "192": "icons/192.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/16.png",
      "32": "icons/32.png",
      "48": "icons/48.png",
      "96": "icons/96.png",
      "192": "icons/192.png"
    },
    "name": "番組Collection",
    "default_title": "Watch bangumi, in the way it should be."
  }
}