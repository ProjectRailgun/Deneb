{
  "manifest_version": 2,
  "name": "Deneb Social",
  "description": "Add some social elements to Deneb",
  "version": "1.2",
  "background": {
    "scripts": ["backend.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["http://localhost:3000/*"],
      "run_at": "document_start",
      "js": ["bridge.js"]
    }
  ],
  "externally_connectable": {
    "matches": ["http://localhost:3000/*"]
  },
  "permissions": [
    "cookies",
    "https://bgm.tv/*",
    "https://api.bgm.tv/*",
    "http://localhost:3000/*",
    "storage",
    "tabs"
  ]
}